{
  "name": "mongodb-runner",
  "version": "2.2.0",
  "author": "Lucas Hrabovsky <hrabovsky.lucas@gmail.com> (http://imlucas.com)",
  "description": "Starts all of the deployment types for testing",
  "scripts": {
    "fmt": "mongodb-js-fmt index.js bin/*.js lib/*.js test/*.js",
    "check": "mongodb-js-precommit",
    "test": "mocha",
    "ci": "./node_modules/istanbul/lib/cli.js cover _mocha -- -R spec ./test/*.test.js"
  },
  "bin": {
    "mongodb-runner": "./bin/mongodb-runner.js"
  },
  "homepage": "http://github.com/mongodb-js/runner",
  "repository": {
    "type": "git",
    "url": "git://github.com/mongodb-js/runner.git"
  },
  "check": {
    "entries": [
      "bin/*.js"
    ],
    "ignore": [
      "coverage/{*,**/*}"
    ]
  },
  "precommit": [
    "check"
  ],
  "keywords": [
    "mongodb",
    "mongodb.js"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "async": "^1.4.2",
    "backoff": "^2.4.1",
    "clui": "^0.3.1",
    "debug": "^2.2.0",
    "lodash.defaults": "^3.1.2",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "mongodb": "^2.0.45",
    "mongodb-dbpath": "0.0.1",
    "mongodb-tools": "1.0.6",
    "mongodb-version-manager": "0.8.2",
    "tmp": "0.0.28",
    "untildify": "~2.1.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.4",
    "eslint-config-mongodb-js": "^0.1.6",
    "github-release": "~0.2.0",
    "gulp": "~3.9.0",
    "istanbul": "^0.3.22",
    "kill-mongodb": "0.0.1",
    "lone": "~0.4.2",
    "mocha": "~2.3.3",
    "mongodb-js-fmt": "0.0.3",
    "mongodb-js-precommit": "^0.2.2",
    "pre-commit": "^1.1.1"
  }
}
